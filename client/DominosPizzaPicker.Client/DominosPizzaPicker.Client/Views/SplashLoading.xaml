<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DominosPizzaPicker.Client.Views.SplashLoading"
             Title=""
             BackgroundColor="#3F51B5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,0,0,0">
            <Image x:Name="imgSplash" Source="pizza_splash.png" Aspect="AspectFit" />
        </StackLayout>
        <StackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Margin="0,0,0,50">
            <Label x:Name="lblLoading" Text="" Margin="0" TextColor="Black" FontSize="Small" Padding="20,0,20,40"/>
            <ActivityIndicator x:Name="activityIndicator"
                               Grid.RowSpan="2"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsVisible="True"
                               IsRunning="True"
                               IsEnabled="True"
                               Scale="2.5"/>
        </StackLayout>
    </Grid>
</ContentPage>